{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 16",
	"compilerOptions": {
		"lib": ["es2021"],
		"module": "commonjs",
		"target": "esnext",
		"baseUrl": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["node_modules/@types", "src/types"]
	}
}
